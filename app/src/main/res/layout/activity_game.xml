<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fontFamily="@font/poppins_regular"
    android:gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_0_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="0,0"/>

        <Button
            android:id="@+id/button_0_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="0,1"/>

        <Button
            android:id="@+id/button_0_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="0,2"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_1_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="1,0"/>

        <Button
            android:id="@+id/button_1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="1,1"/>

        <Button
            android:id="@+id/button_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="1,2"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_2_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="2,0"/>

        <Button
            android:id="@+id/button_2_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="2,1"/>

        <Button
            android:id="@+id/button_2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:textSize="40sp"
            android:textColor="@color/buttonTextColor"
            android:text=""
            android:tag="2,2"/>

    </GridLayout>
</LinearLayout>
